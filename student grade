<div class="container">
  <h2>Student Grade Calculator</h2>

  <?php
  // Function to calculate grade
  function calculateGrade($average) {
      if ($average >= 90) return "Excellent (A+)";
      elseif ($average >= 75) return "Good (A)";
      elseif ($average >= 60) return "Pass (B)";
      else return "Fail (C)";
  }

  if ($_SERVER["REQUEST_METHOD"] == "POST") {
      // Array of subjects
      $subjects = ["Maths", "Science", "English", "Computer", "History"];
      $marks = [];

      foreach ($subjects as $subject) {
          $marks[$subject] = (int)$_POST[$subject];
      }

      $total = array_sum($marks);
      $average = $total / count($marks);
      $grade = calculateGrade($average);

      echo "<div class='result'>";
      echo "<h3>Result</h3>";
      echo "<p><strong>Total Marks:</strong> $total</p>";
      echo "<p><strong>Average:</strong> " . number_format($average, 2) . "</p>";
      echo "<p><strong>Grade:</strong> $grade</p>";
      echo "</div>";
  }
  ?>

  <form method="post" action="">
    <label>Maths:</label>
    <input type="number" name="Maths" required>

    <label>Science:</label>
    <input type="number" name="Science" required>

    <label>English:</label>
    <input type="number" name="English" required>

    <label>Computer:</label>
    <input type="number" name="Computer" required>

    <label>History:</label>
    <input type="number" name="History" required>

    <button type="submit" class="btn">Calculate Grade</button>
  </form>
</div>

