<h2>Employee Salary Details</h2>

<?php
// Employee data (advanced multidimensional associative array)
$employees = [
    [
        "id" => 101,
        "name" => "Divya Priya",
        "department" => "HR",
        "basic" => 25000,
        "allowance" => 5000,
        "deduction" => 2000
    ],
    [
        "id" => 102,
        "name" => "Arun Kumar",
        "department" => "IT",
        "basic" => 30000,
        "allowance" => 8000,
        "deduction" => 2500
    ],
    [
        "id" => 103,
        "name" => "Sneha R",
        "department" => "Finance",
        "basic" => 28000,
        "allowance" => 6000,
        "deduction" => 1800
    ]
];

// Function to calculate net salary
function calculateNetSalary($basic, $allowance, $deduction) {
    return $basic + $allowance - $deduction;
}

// Display in table
echo "<table>";
echo "<tr>
        <th>Emp ID</th>
        <th>Name</th>
        <th>Department</th>
        <th>Basic Salary</th>
        <th>Allowance</th>
        <th>Deduction</th>
        <th>Net Salary</th>
      </tr>";

foreach ($employees as $emp) {
    $net = calculateNetSalary($emp["basic"], $emp["allowance"], $emp["deduction"]);
    echo "<tr>
            <td>{$emp['id']}</td>
            <td>{$emp['name']}</td>
            <td>{$emp['department']}</td>
            <td>{$emp['basic']}</td>
            <td>{$emp['allowance']}</td>
            <td>{$emp['deduction']}</td>
            <td><strong>$net</strong></td>
          </tr>";
}

echo "</table>";
?>

</body>
